= form_for @info do |f|
  - if @info.errors.any?
    #error_explanation
      %h2= "#{pluralize(@info.errors.count, "error")} prohibited this info from being saved:"
      %ul
        - @info.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_area :description, class: 'form-control'
  .actions
    = f.submit 'Save'
