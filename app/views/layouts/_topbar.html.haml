.navbar.navbar-default
  .container
    .navbar-header
      =link_to t('app.name'), infos_path(:id),class: 'navbar-brand'
    %ul.nav.navbar-nav
      %li{class: ('active' if controller_name=='infos')}=link_to "Информация",infos_path
      -#%li{class: ('active' if controller_name=='countries')}=link_to "Страны",countries_path
      -#%li{class: ('active' if controller_name=='people')}=link_to "Персоны",people_path
      -#%li{class: ('active' if controller_name=='films')}=link_to "Фильмы",films_path
      -if User.edit?(@current_user)
        %li{class: ('active' if controller_name=='users')}=link_to "Пользователи",users_path
        -#%li{class: ('active' if controller_name=='banners')}=link_to "Баннеры",banners_path
    %ul.nav.navbar-nav.navbar-right
      -if @current_user
        %li.dropdown
          =link_to ?#,class: 'dropdown-toggle', data: {toggle: 'dropdown'} do
            =@current_user.login
            %span.caret
          %ul.dropdown-menu
            %li=link_to 'Выход',logout_path
      -else
        %li=link_to "Вход",login_path
        %li=link_to "Регистрация",new_user_path
